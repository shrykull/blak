<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
     "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>

<head>
  <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css" />
  <link rel="stylesheet" href="css/blak.min.css" type="text/css" />
  <link rel="stylesheet" href="css/jquery-ui.min.css" type="text/css" />

  <script type="text/javascript" src="js/lib/jquery-2.1.1.min.js"></script>
  <script type="text/javascript" src="js/lib/jquery-ui.min.js"></script>
  <script type="text/javascript" src="js/lib/jquery-autogrow.min.js"></script>
  <script type="text/javascript" src="js/blak.js"></script>
  <script type="text/javascript" src="js/autocomplete.js"></script>
</head>

<body>
  {% include 'includes/navbar.twig' %}
  <div class="container">
    <div class="page-header">
      <h1>BLAK</h1>
    </div>
    <p>
      <div class="row">
        <div class="col-xs-4">
          <div class="input-group">
            <input class="form-control searchString" id="searchString" type="text" placeholder="Enter IDs" />
            <div class="btn input-group-addon addon-success" id="btnSearch">Search!</div>
          </div>
        </div>
      </div>
    </p>
    <p>
      <button id="fetchStuff" class="btn btn-success btn-sm" type="button" value="Uberraschung">Refresh</button>
    </p>
    <p>&nbsp;</p>
    <div id="mainview">
      <p id="ingredientContent" class="ingredients">in</p>
      <p id="outputContent" class="output">out</p>
      <p id="searchResults" class="search">search</p>
    </div>

    <template id="recipeTemplate">
      <div class="row">
        <div class="col-md-5">
          <content select=".ingredients"></content>
        </div>
        <div class="col-md-2">
          <i class="glyphicon glyphicon-arrow-right" style="color:#333;font-size:40px;align:centered;"></i>
        </div>
        <div class="col-md-5">
          <content select=".output"></content>
        </div>
      </div>
    </template>

    <template id="searchTemplate">
      <div class="col-md-12">
        <content select=".search"></content>
      </div>
    </template>
  </div>
</body>

</html>